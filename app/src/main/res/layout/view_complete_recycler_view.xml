<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CompleteRecylerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.widget.recycler.CompleteRecyclerView">


    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="visible"
        tools:alpha="0.33"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/empty"
        style="@style/CompleteRecylerView.Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:alpha="0.33"
        tools:text="@string/complete_list_view_empty"
        tools:visibility="visible" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/inner_list"
            style="@style/CompleteRecylerView.List"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:alpha="0.33"
            tools:visibility="visible" />

    </android.support.v4.widget.SwipeRefreshLayout>

</merge>